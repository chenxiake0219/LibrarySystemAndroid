<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btn_borrow"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:background="@android:color/transparent"
            android:text="借阅"
            android:gravity="end|center_vertical"
            android:layout_toLeftOf="@+id/btn_look"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_look"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="查看"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/page_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_borrow"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="学生ID:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_namw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/index"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="性别:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_namw"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="学生姓名:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猫腻"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="邮箱地址:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11@qq.com"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_name"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="电话号码:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="133133..."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/press"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="借书日期:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_borrow_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-1-1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/press"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="操作者:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吴磊"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>