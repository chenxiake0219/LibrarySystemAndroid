<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btn_return"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="还书"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/page_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_return"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="学生ID:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_stu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/index"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="书籍ID:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_id"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="学生姓名:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猫腻"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stu_name"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="书籍名称:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《庆余年》"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/borrow_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_name"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="借书日期:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_borrow_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-1-1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expect_return_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/borrow_date"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="预计还书日期:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_exp_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-2-1"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>